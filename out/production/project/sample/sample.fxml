<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.sun.javafx.scene.control.skin.SplitPaneSkin.Content?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane minHeight="720.0" minWidth="1280.0" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="sample.Controller">
    <top>
        <AnchorPane>
            <children>
                <MenuBar BorderPane.alignment="CENTER" minHeight="30.0">
                    <Menu text="File">
                        <MenuItem text="New"/>
                        <MenuItem text="Open"/>
                        <MenuItem text="Save"/>
                        <MenuItem text="Close"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Exit"/>
                    </Menu>
                </MenuBar>
                <Button layoutX="100" BorderPane.alignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0">
                            <image>
                                <Image url="https://img.icons8.com/external-bartama-glyph-64-bartama-graphic/344/external-Brush-education-and-school-glyph-bartama-glyph-64-bartama-graphic.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </AnchorPane>
    </top>
    <left>
        <Pane maxWidth="150" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: red;"
              BorderPane.alignment="CENTER"/>
    </left>
    <center>
        <Pane id="canvas" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER"/>
    </center>
    <right>
        <Pane maxWidth="150" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: red;"
              BorderPane.alignment="CENTER"/>
    </right>
</BorderPane>
