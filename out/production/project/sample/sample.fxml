<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.sun.javafx.scene.control.skin.SplitPaneSkin.Content?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.canvas.Canvas?>
<BorderPane stylesheets="@style.css" minHeight="720.0" minWidth="1280.0" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="sample.Controller">
    <top>
        <AnchorPane styleClass="toolbar">
            <children>
                <MenuBar styleClass="menu" BorderPane.alignment="CENTER">
                    <Menu text="File">
                        <MenuItem text="New"/>
                        <MenuItem text="Open"/>
                        <MenuItem text="Save"/>
                        <MenuItem text="Close"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Exit"/>
                    </Menu>
                </MenuBar>
                <Button styleClass="btn" layoutX="60.0" BorderPane.alignment="CENTER">
                    <graphic>
                        <ImageView fx:id="imageView" fitHeight="22.0" fitWidth="22.0" style="-fx-translate-y: 1">
                            <image>
                                <Image url="https://img.icons8.com/material-outlined/344/undo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip><Tooltip text="Undo" /></tooltip>
                </Button>
                <Button styleClass="btn" layoutX="102.0" BorderPane.alignment="CENTER">
                    <graphic>
                        <ImageView fx:id="imageView" fitHeight="22.0" fitWidth="22.0" style="-fx-translate-y: 1">
                            <image>
                                <Image url="https://img.icons8.com/material-outlined/344/redo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip><Tooltip text="Redo" /></tooltip>
                </Button>
                <Button styleClass="btn" layoutX="200.0" BorderPane.alignment="CENTER">
                    <graphic>
                        <ImageView fx:id="imageView" fitHeight="22.0" fitWidth="22.0" style="-fx-translate-y: 1">
                            <image>
                                <Image url="https://img.icons8.com/ios-glyphs/344/text.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip><Tooltip text="Text" /></tooltip>
                </Button>
                <Button styleClass="btn" layoutX="242.0" BorderPane.alignment="CENTER">
                    <graphic>
                        <ImageView fx:id="imageView" fitHeight="22.0" fitWidth="22.0">
                            <image>
                                <Image url="https://img.icons8.com/external-bartama-glyph-64-bartama-graphic/344/external-Brush-education-and-school-glyph-bartama-glyph-64-bartama-graphic.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip><Tooltip text="Brush" /></tooltip>
                </Button>
                <ColorPicker styleClass="colorPicker" layoutX="310.0">
                    <tooltip><Tooltip text="Colors" /></tooltip>
                </ColorPicker>
            </children>
        </AnchorPane>
    </top>
    <left>
        <Pane maxWidth="150" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: red;"
              BorderPane.alignment="CENTER"/>
    </left>
    <center>
        <Canvas id="canvas" height="600.0" width="800.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER"/>
<!--        <Pane id="canvas" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER"/>-->
    </center>
    <right>
        <Pane maxWidth="150" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: red;"
              BorderPane.alignment="CENTER"/>
    </right>
</BorderPane>
